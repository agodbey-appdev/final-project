<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Habbit #<%= @habbit.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/habbits" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/habbits/<%= @habbit.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit habbit
        </a>
      </div>

      <div class="col">
        <a href="/delete_habbit/<%= @habbit.id %>" class="btn btn-block btn-outline-secondary">
          Delete habbit
        </a>
      </div>

    </div>

    <dl>
      <dt>
        Description
      </dt>
      <dd>
        <%= @habbit.description %>
      </dd>

      <dt>
        Points
      </dt>
      <dd>
        <%= @habbit.points %>
      </dd>


      <dt>
        Active
      </dt>
      <dd>
        <%= @habbit.active %>
      </dd>

      <dt>
        User
      </dt>
      <dd>
        <%= @habbit.user_id %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@habbit.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@habbit.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>
