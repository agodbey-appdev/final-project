<% if @habbit.errors.any? %>
  <% @habbit.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit habbit #<%= @habbit.id %>
</h1>

<hr>

<form action="/update_habbit/<%= @habbit.id %>" method="post">

  <div class="form-group">
    <label for="description">
      Description
    </label>

    <input type="text" id="description" name="description" class="form-control" value="<%= @habbit.description %>">
  </div>

  <div class="form-group">
    <label for="points">
      Points
    </label>

    <input type="text" id="points" name="points" class="form-control" value="<%= @habbit.points %>">
  </div>

  <div class="form-group">
    <label for="virtue">
      Virtue
    </label>

    <input type="text" id="virtue" name="virtue" class="form-control" value="<%= @habbit.virtue %>">
  </div>

  <div class="form-group">
    <label for="active">
      Active
    </label>

    <input type="text" id="active" name="active" class="form-control" value="<%= @habbit.active %>">
  </div>

  <div class="form-group">
    <label for="user_id">
      User
    </label>

    <input type="text" id="user_id" name="user_id" class="form-control" value="<%= @habbit.user_id %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update habbit
  </button>
</form>

<hr>

<a href="/habbits">
  Go back
</a>
