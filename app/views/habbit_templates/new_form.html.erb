<h1>
  Add a new habbit
</h1>


<hr>

<form action="/create_habbit" method="post">

  <div class="form-group">
    <label for="description">
      Description
    </label>

    <input type="text" id="description" name="description" class="form-control">
  </div>

  <div class="form-group">
    <label for="points">
      Points
    </label>

    <input type="text" id="points" name="points" class="form-control">
  </div>

<div class="form-check form-check-inline">
  <input class="form-check-input" type="radio" name="virtue" id="virtue" value=1>
  <label class="form-check-label" for="virtue">Virtue</label>
</div>
<div class="form-check form-check-inline">
  <input class="form-check-input" type="radio" name="virtue" id="virtue" value=0>
  <label class="form-check-label" for="virtue">Vice</label>
</div>


 <input type="hidden" name="active" value=1>

 <input type="hidden" name="user_id" value="<%= current_user.id %>">

  <button class="btn btn-block btn-outline-secondary">
    Create habbit
  </button>
</form>

<hr>

<a href="/habbits">
  Go back
</a>
